{
  "name": "rail-manager",
  "scripts": {
    "start": "bun build:tailwind && bun src/server/server.ts",
    "dev": "bun --watch src/server/server.ts & bun build:tailwind:watch",
    "build:tailwind": "./tailwindcss -i ./src/server/templates/globals.css -o ./dist/globals.css --minify",
    "build:tailwind:watch": "./tailwindcss -i ./src/server/templates/globals.css -o ./dist/globals.css --watch"
  },
  "devDependencies": {
    "bun-types": "^1.2.20"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.9",
    "@kitajs/ts-html-plugin": "^4.1.2",
    "bun-plugin-tailwind": "^0.0.15",
    "tailwindcss": "^4.1.11",
    "zod": "^4.0.17"
  }
}
